{
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,

    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [{ "name": "next" }],
    "moduleResolution": "bundler",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",

    "paths": {
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@hooks/*": ["./hooks/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@models/*": ["./models/*"],
      "@schemas/*": ["./schemas/*"],
      "@styles/*": ["./styles/*"],
      "@public/*": ["./public/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
